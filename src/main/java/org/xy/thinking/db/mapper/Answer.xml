<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"    
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="org.xy.thinking.db.dao.AnswerDao">
<!--设置domain类和数据库中表的字段一一对应，注意数据库字段和domain类中的字段名称不致，此处一定要！-->  
    <resultMap id="BaseResultMap" type="org.xy.thinking.db.model.Answer">  
        <id column="ID" property="id" jdbcType="INTEGER" />  
        <result column="question_code" property="questionCode" jdbcType="CHAR" />  
        <result column="question_pattern" property="questionPattern" jdbcType="CHAR" /> 
        <result column="answer_code" property="answerCode" jdbcType="CHAR" />  
        <result column="question_text" property="questionText" jdbcType="CHAR" />  
        <result column="answer_text" property="answerText" jdbcType="CHAR" />  
        <result column="keypoints" property="keypoints" jdbcType="CHAR" />  
        <result column="composed" property="composed" jdbcType="DATE" />  
    </resultMap>
    
    <!-- 查询单条记录 -->  
    <select id="selectByCaseSectionCode" parameterType="string" resultMap="BaseResultMap">  
        SELECT * FROM answers WHERE case_code=#{caseCode} and section_code = #{sectionCode} 
    </select>  
</mapper>